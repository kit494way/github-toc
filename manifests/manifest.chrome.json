{
  "manifest_version": 3,
  "name": "github-toc",
  "version": "0.2.0",
  "description": "Show the table of contents in github and make it possible to jump to headings.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "declarativeContent", "scripting"],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "GitHub TOC",
    "default_popup": "popup/index.html",
    "show_matches": ["https://github.com/*"]
  },
  "background": {
    "service_worker": "background/chrome/index.js",
    "type": "module"
  }
}
